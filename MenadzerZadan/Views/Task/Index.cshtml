@model IEnumerable<MenadzerZadan.Models.TaskModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista zadań</h2>

<p>
    @Html.ActionLink("Dodaj zadanie", "Create", null, null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Gotowe", "Done", new { id = item.TaskId, @class = "btn btn-success" }) |
            @Html.ActionLink("Edytuj", "Edit", new { id = item.TaskId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id = item.TaskId }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.TaskId })
        </td>
    </tr>
}

</table>
